{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Szczegóły kategorii'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Informacje o kategorii'|trans({'%id%': category.id|default('')}) }}</h1>
    {% if category is defined and category|length %}
        <dl>
            <dt>{{ 'ID'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'Stworzono'|trans }}</dt>
            <dd>{{ category.createdAt|format_date('long') }}</dd>
            <dt>{{ 'Zaktualizowano'|trans }}</dt>
            <dd>{{ category.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'Tytuł'|trans }}</dt>
            <dd>{{ category.title }}</dd>
        </dl>
        {% if tasks is defined and tasks|length %}
            <table>
                <thead>
                <tr>
                    <th>{{ 'label.id'|trans }}</th>
                    <th>{{ 'label.title'|trans }}</th>
                    <th>{{ 'label.created_at'|trans }}</th>
                    <th>{{ 'label.updated_at'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.id }}</td>
                        <td><a href="{{ url('task_show', {id: task.id}) }}" class="no_underline">{{ task.title }}</a></td>
                        <td>{{ task.createdAt|format_date('long') }}</td>
                        <td>{{ task.updatedAt|format_date('long') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
        <p>
            <a href="{{ url('category_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-primary">
                {{ 'Powrót'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'Nie odnaleziono rekordu'|trans }}
        </p>
    {% endif %}
{% endblock %}
