{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Categories' }}
{% endblock %}

{% block body %}
    <h1>Categories</h1>
    {% if categories is defined and categories|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'ID' }}</th>
                <th>{{ 'Title' }}</th>
                <th>{{ 'Created At' }}</th>
                <th>{{ 'Updated At' }}</th>
                <th scope="col">
                    {{ 'Actions' }}
                </th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td>{{ category.createdAt|date('Y-m-d H:i:s') }}</td>
                    <td>{{ category.updatedAt|date('Y-m-d H:i:s') }}</td>
                    <td>
                        <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-primary">Show</a>
                        <!-- Add more actions as needed -->
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No categories found.</p>
    {% endif %}
{% endblock %}
