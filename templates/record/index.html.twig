{% extends 'base.html.twig' %}

{% block title %}
    {% if record is defined %}
        View record
    {% else %}
        {{ 'title.record_list'|trans }}
    {% endif %}
{% endblock %}

{% block body %}
    {% if record is defined %}
        <h1>View record</h1>
        <dl>
            <dt>Title</dt>
            <dd>{{ record.title }}</dd>
            <dt>Content</dt>
            <dd>{{ record.content }}</dd>
            <dt>Tags</dt>
            <dd>{{ record.tags|join(', ') }}</dd>
        </dl>
    {% else %}
        <h1>{{ 'title.record_list'|trans }}</h1>
        {% if records is defined and records|length %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ 'label.id'|trans }}</th>
                    <th>{{ 'label.title'|trans }}</th>
                    <th>{{ 'label.content'|trans }}</th>
                    <th scope="col">
                        {{ 'label.actions'|trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for record in records %}
                    <tr>
                        <td>{{ record.id }}</td>
                        <td>{{ record.title }}</td>
                        <td>{{ record.tags|join(', ') }}</td>
                        <td>&nbsp;</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>
                {{ 'message.empty_list'|trans }}
            </p>
        {% endif %}
    {% endif %}
{% endblock %}
