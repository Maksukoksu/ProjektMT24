{# templates/admin/user_list.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'title.users'|trans }}</h1>
    <table>
        <thead>
        <tr>
            <th>{{ 'label.email'|trans }}</th>
            <th>{{ 'label.roles'|trans }}</th>
            <th>{{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            {% if user.id != app.user.id %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>
                        <form action="{{ path('admin_user_edit', {'id': user.id}) }}" method="get">
                            <button type="submit" class="btn btn-primary">{{ 'action.edit'|trans }}</button>
                        </form>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
