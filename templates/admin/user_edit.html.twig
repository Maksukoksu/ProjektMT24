{# templates/admin/user_edit.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'title.edit_data'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword) }}
    {{ form_row(form.roles) }}
    <button class="btn btn-dark">{{ 'action.save'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}
