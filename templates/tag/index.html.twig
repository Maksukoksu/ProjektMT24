{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.tags'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'header.tag_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="create-tag-link">
            <a href="{{ path('tag_create') }}" class="btn btn-primary">{{ 'action.create'|trans }}</a>
        </div>
        <br>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'tag.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'tag.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'tag.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.edit_at'|trans, 'tag.updatedAt') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in pagination.items %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td><a href="{{ url('tag_show', {id: tag.id}) }}" class="no_underline">{{ tag.title }}</a></td>
                    <td>{{ tag.createdAt|format_date('long') }}</td>
                    <td>{{ tag.updatedAt|format_date('long') }}</td>
                    <td>
                        <a href="{{ path('tag_show', {'id': tag.id}) }}" class="btn btn-primary">{{ 'action.show'|trans }}</a>
                        <a href="{{ path('tag_edit', {'id': tag.id}) }}" class="btn btn-secondary">{{ 'action.edit'|trans }}</a>
                        <form method="post" action="{{ path('tag_delete', {'id': tag.id}) }}" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger">{{ 'action.delete'|trans }}</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
