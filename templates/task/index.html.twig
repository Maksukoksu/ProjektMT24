{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.task_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'Lista zadań'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="create-task-link">
            <a href="{{ path('task_create') }}" class="btn btn-primary">Stwórz zadanie</a>
        </div>

        <br>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'ID'|trans, 'task.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Data Utworzenia'|trans, 'task.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Data aktualizacji'|trans, 'task.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Tytuł'|trans, 'task.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Kategoria'|trans, 'category.title') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for task in pagination.items %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.createdAt|format_date('long') }}</td>
                    <td>{{ task.updatedAt|format_date('long') }}</td>
                    <td>{{ task.title }}</td>
                    <td>{{ task.category.title }}</td>
                    <td>
                        <a href="{{ path('task_show', {'id': task.id}) }}" class="btn btn-primary">{{ 'Pokaż'|trans }}</a>
                        <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-secondary">{{ 'Edytuj'|trans }}</a>
                        <form method="post" action="{{ path('task_delete', {'id': task.id}) }}" style="display:inline-block;" onsubmit="return confirm('{{ 'Czy napewno chcesz usunąć ?'|trans }}');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger">{{ 'Usuń'|trans }}</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'Lista pusta'|trans }}
        </p>
    {% endif %}
    <div class="category-link">
        <a href="{{ path('category_index') }}" class="btn btn-primary">Lista Kategorii</a>
    </div>
{% endblock %}