{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.transactions'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'header.transaction_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="create-category-link">
            <a href="{{ path('transaction_create') }}" class="btn btn-primary">{{ 'action.add_transaction'|trans }}</a>
        </div>
        <br>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'transaction.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'transaction.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.wallet'|trans, 'wallet.title') }}</th>
                <th>{{ 'label.categories'|trans }}</th>
                <th>{{ 'label.tag'|trans }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.value'|trans, 'transaction.amount') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for transaction in pagination.items %}
                <tr>
                    <td>{{ transaction.createdAt|format_date('long') }}</td>
                    <td>{{ transaction.title }}</td>
                    <td>{{ transaction.wallet.title }}</td>
                    <td>
                        <a href="{{ url('transaction_index', {'filters.category_id' : transaction.category.id}) }}" title="{{ transaction.category.title }}" class="btn btn-outline-success">
                            {{ transaction.category.title }}
                        </a>
                    </td>
                    <td>
                        {% for tag in transaction.tags %}
                        <a href="{{ url('transaction_index', {'filters.tag_id' : tag.id}) }}" title="{{ tag.title }}" class="btn btn-outline-info">
                            {{ tag.title }}
                            </a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ transaction.amount|number_format(2, ',', ' ') }} PLN</td>
                    <td>
                        <a href="{{ url('transaction_edit', {id: transaction.id}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-primary">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a href="{{ url('transaction_delete', {id: transaction.id}) }}" title="{{ 'action.delete'|trans }}" class="btn btn-danger">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'message.empty_list'|trans
        } %}
    {% endif %}
{% endblock %}
